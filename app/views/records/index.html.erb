<div class="container">
    
    <h1>Balance: <%= @blnc %></h1>
    <h1>Debt: <%= @deb %></h1>
    <h1>Total: <%= @amt %></h1>
    
    <table class = "table">
        
      <thead>
          <tr>
             <th>Date</th>
             <th>Title</th>
             <th>Amount</th>
             <th></th>
             <th></th>
          </tr>
       </thead>
       
       <tbody>
           <% @records.each do |record| %>
              <tr>
                 <td><%= record.date %></td>
                 <td><%= record.title %></td>
                 <td><%= record.amount %></td>
                 <td><%= link_to 'Edit', edit_record_path(record), class: 'btn btn-primary' %></td>
                 <td><%= link_to 'Delete', record_path(record) , method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure?'} %></td>
              </tr>
            <% end %>
            
            <%= @totalamt %>
       </tbody>
       
    </table>
    
</div>